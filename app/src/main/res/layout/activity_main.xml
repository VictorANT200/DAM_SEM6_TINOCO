<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/RadioGroupUniversidad"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#4ECEEF"
    android:orientation="horizontal"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="130dp"
        android:text="Seleccione Universidad:"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.053"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RadioGroup
        android:id="@+id/RadioGroupUniversidad"
        android:layout_width="397dp"
        android:layout_height="61dp"
        android:layout_marginTop="31dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        tools:layout_editor_absoluteX="7dp">

        <RadioButton
            android:id="@+id/radioButtonUntels"
            android:layout_width="137dp"
            android:layout_height="wrap_content"
            android:text="@string/radiobutton_untels" />

        <RadioButton
            android:id="@+id/radioButtonUsmsm"
            android:layout_width="137dp"
            android:layout_height="wrap_content"
            android:text="@string/radiobutton_unmsm" />

        <RadioButton
            android:id="@+id/radioButtonUpeu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/radiobutton_upeu" />
    </RadioGroup>

</androidx.constraintlayout.widget.ConstraintLayout>